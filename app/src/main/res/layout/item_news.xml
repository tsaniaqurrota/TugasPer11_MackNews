<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="15dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/news_thumb"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/techpic" />

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"
        android:textColor="@color/black"
        android:text="Ini  Judu Berita"/>

    <TextView
        android:id="@+id/desc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:text="Ini adalah cuplikan berita. Ini adalah cuplikan berita. Ini adalah cuplikan berita.Ini adalah cuplikan berita.Ini adalah cuplikan berita.Ini adalah cuplikan berita.Ini adalah cuplikan berita."/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_author" />

            <TextView
                android:id="@+id/author_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_dark"
                android:textSize="12sp"
                android:layout_marginStart="3dp"
                android:text="Nama penulis" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:src="@drawable/icon_date_publish" />

            <TextView
                android:id="@+id/publish_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_dark"
                android:textSize="12sp"
                android:layout_marginStart="3dp"
                android:text="dd mm yyyy" />
        </LinearLayout>

</LinearLayout>
</LinearLayout>
