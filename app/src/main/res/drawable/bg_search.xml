<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle"
                    android:width="298dp"
                    android:height="600dp">

                    <padding
                        android:bottom="10dp"
                        android:top="10dp"
